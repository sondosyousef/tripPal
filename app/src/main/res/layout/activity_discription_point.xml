<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HelperClasses.HomeAdapter.discriptionPoint"
    android:orientation="vertical">

    <TextView
        android:id="@+id/namePoint"
        android:layout_width="327dp"
        android:layout_height="64dp"
        android:text="ddd"
        android:textSize="30dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imgPoint"
        android:layout_width="303dp"
        android:layout_height="176dp" />

    <TextView
        android:id="@+id/description2"
        android:layout_width="429dp"
        android:layout_height="328dp"
        android:textSize="20dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/seeMore"
            android:layout_width="140dp"
            android:layout_height="37dp"
            android:layout_marginLeft="30dp"
            android:text="go to see more"
            android:textColor="#88715F"
            android:textSize="20dp"
            android:textStyle="italic" />
    </LinearLayout>

    <Button
        android:id="@+id/pointOfInterst"
        android:layout_width="164dp"
        android:layout_height="89dp"
        android:backgroundTint="@color/home_bakground"
        android:drawableRight="@drawable/menu_rate_us"
        android:text="add plan"
        android:textColor="@color/black"
        android:textStyle="bold" />
</LinearLayout>